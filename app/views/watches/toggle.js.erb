$_watch = $('.watch_02[data-pid=<%= @product_id %>]');
<% if @watch.soft_destroyed_at.present? %>
  $_watch.removeClass("active").attr("data-original-title", "ウォッチリストに登録");
<% else %>
  $_watch.addClass("active").attr("data-original-title", "ウォッチリストから削除");
<% end %>

<% if @watch_pids.length  > 0 %>
  $(".header-watch span.glyphicon.glyphicon-star").addClass("watch-star");
  $(".badge.watch-badge").show().text("<%= @watch_pids.length  %>");
<% else %>
  $(".header-watch span.glyphicon.glyphicon-star").removeClass("watch-star");
  $(".badge.watch-badge").hide();
<% end %>
