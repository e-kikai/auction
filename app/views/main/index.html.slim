/// 基本 ///
- set_meta_tags keywords: "工具 機械 NC ものづくり オークション 販売", description: "ものづくりに特化したオークションサイト"

/// Twitterカード ///
- set_meta_tags twitter: { card: "summary", site: "@username", image: asset_url("logo_02.png") }

/// OGP ///
- set_meta_tags og: { type: "website", title: "ものづくりオークション", description: "ものづくりに特化したオークションサイト", url: root_url, site_name: "ものづくりオークション", image: asset_url("logo_02.png") }

.main-container.toppage.clearfix
  .row
    - if user_signed_in?
      label 保存した検索条件
      - current_user.searches.each do |se|
        =< link_to se.name, se.uri

  .col-md-2
    .panel.panel-default
      .panel-heading マイ・オークション
      ul.list-group
        = link_to "ウォッチリスト", "myauction/mylists", class: "list-group-item"
        = link_to "入札中", "myauction/bids", class: "list-group-item"
        = link_to "落札分", "myauction/bids/end", class: "list-group-item"
        - if current_user.try(:seller?)
          = link_to "出品中", "myauction/products", class: "list-group-item"
          = link_to "出品終了", "myauction/products/end", class: "list-group-item"

    .panel.panel-default
      .panel-heading
        | カテゴリから探す
        / = link_to "categories" do
        /   | カテゴリから探す
        /   .pull-right
        /     .glyphicon.glyphicon-menu-right
      ul.list-group
        - @roots.each do |ca|
          - ca.children.each do |ca2|
            = link_to ca2.name, "products?category_id=#{ca2.id}", class: "list-group-item"

  .col-md-7
